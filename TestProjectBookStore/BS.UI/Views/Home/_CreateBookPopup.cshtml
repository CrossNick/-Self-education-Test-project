<div class="modal" id="create-book-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add new book</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="create-book-form">
                    <div class="form-group">
                        <label for="create-book-title">Title: </label>
                        <input type="text" class="form-control" id="create-book-title" name="Title" placeholder="Enter title">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Authors: </label>
                        <select id="create-book-authors" class="form-control" name="Authors[]" multiple="multiple" data-bind="options: allauthors, optionsText: 'FullName', value: 'AuthorId'"></select>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Release date: </label>
                        <input type="date" class="form-control" id="create-book-date" name="ReleaseDate" placeholder="Enter title">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Rating: </label>
                        <input type="number" class="form-control" id="create-book-rating" name="Rating" placeholder="Enter title" min="0" max="10">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Save changes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('.select-author').select2();
        })
</script>