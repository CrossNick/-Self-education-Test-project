<%@ Page Title="Home Page" Language="C#" MasterPageFile="~/Site.Master" AutoEventWireup="true" CodeBehind="Default.aspx.cs" Inherits="BS.WebForms._Default" %>

<asp:Content ID="BodyContent" ContentPlaceHolderID="MainContent" runat="server">

    <asp:HyperLink NavigateUrl="~/AddReview" Text="Add New Review" runat="server" />
    <asp:GridView ID="reviewGrid" runat="server" CellPadding="4" ForeColor="#333333" GridLines="None" Height="165px" HorizontalAlign="Center" Width="479px" ItemType="BS.WebForms.WFViewModels.ReviewVMWF"
        DataKeyNames="Id" SelectMethod="reviewGrid_GetData"
        UpdateMethod="reviewGrid_UpdateItem" DeleteMethod="reviewGrid_DeleteItem"
         AutoGenerateEditButton="true" AutoGenerateDeleteButton="true"  AutoGenerateColumns="false">
        <AlternatingRowStyle BackColor="White" />
        <EditRowStyle BackColor="#2461BF" />
        <FooterStyle BackColor="#507CD1" Font-Bold="True" ForeColor="White" />
        <HeaderStyle BackColor="#507CD1" Font-Bold="True" ForeColor="White" />
        <PagerStyle BackColor="#2461BF" ForeColor="White" HorizontalAlign="Center" />
        <RowStyle BackColor="#EFF3FB" />
        <SelectedRowStyle BackColor="#D1DDF1" Font-Bold="True" ForeColor="#333333" />
        <SortedAscendingCellStyle BackColor="#F5F7FB" />
        <SortedAscendingHeaderStyle BackColor="#6D95E1" />
        <SortedDescendingCellStyle BackColor="#E9EBEF" />
        <SortedDescendingHeaderStyle BackColor="#4870BE" />
         <Columns>
            <asp:DynamicField DataField="Id" ReadOnly="true"/>
            <asp:DynamicField DataField="Name" />
            <asp:DynamicField DataField="DateOfBirth" />
            <asp:DynamicField DataField="Message" />
        </Columns>
    </asp:GridView>


</asp:Content>
